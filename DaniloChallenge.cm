package custom.awesome;

public class DaniloChallenge extends Challenge {

    public ChallengeResult process(double[] a, double[] b) {
        ChallengeResult r = processInfo(a, b);

        for (step in r.steps) {
            step.cost = weights.get(step.type);
            r.totalCost += step.cost; 
        }

        return r;
    }

    extend private ChallengeResult processInfo(double[] a, double[] b) {
        ChallengeResult r();
        double[] aCopy = a.copy();

        bool done = false;
        while (done == false) {
            //Exception: check if no need for removes/changes
            bool onlyAdds = true;
            for (i in a) onlyAdds = onlyAdds and b.contains(i);

            if (!onlyAdds) {
                while (int i=0; i < aCopy.count(); i++) {
                    if (aCopy.count() > i and b.count() > i and aCopy[i] == b[i]) { 
                        done = aCopy.count() == i+1;
                        continue;
                    }
                    else {
                        //1 - Remove
                        bool bHasItem = b.count() > i;
                        bool nextIsMatch = bHasItem and aCopy.count() > i+1 and aCopy[i+1] == b[i];
                        if (nextIsMatch or !bHasItem) {
                            ChallengeOperation op();
                            op.type = remove;
                            op.from = aCopy[i];
                            op.to = null;
                            aCopy.exclude(aCopy[i]);
                            op.snapshotAfter = aCopy.copy;
                            r.steps << op;
                            
                            break;//restarts
                        //2 - Move
                        } else {
                            ChallengeOperation op();
                            op.type = move;
                            op.from = aCopy[i];
                            op.to = b[i];
                            aCopy[i] = b[i];
                            op.snapshotAfter = aCopy.copy;
                            r.steps << op;

                            break;//restarts
                        }
                    }
                }
            } else {
                done = true;
            }

            //3 - Add if there still are items in b
            if (b.count > aCopy.count) {
                while (int i=0; i < b.count; i++) if (!aCopy.contains(b[i])) {
                    ChallengeOperation op();
                    op.type = add;
                    op.from = null;
                    op.to = b[i];
                    aCopy << b[i];
                    op.snapshotAfter = aCopy.copy;
                    r.steps << op;
                }
            }
        }

        return r;
    }
}