package custom.awesome;

public class MateusChallenge extends Challenge {
    public ChallengeResult process(double[] a, double[] b) {
        var result = ChallengeResult();

        double[] lastState = a;
        while(!lastState.equal(b)) {
            var step = processStep(lastState,b);
            result.steps << step;
            lastState = step.snapshotAfter;
        }

        for(s in result.steps) {
            result.totalCost += s.cost;
        }
        return result;
    }

    extend private ChallengeOperation processStep(double[] a, double[] b) {
        double[] newState = a.copy();

        double[] notMatchA();
        for(n in a) {
            if(n !in b) {
                notMatchA << n;
            }
        }

        double[] notMatchB();
        for(n in b) {
            if(n !in a) {
                notMatchB << n;
            }
        }

        var operation = ChallengeOperation();

        //got extra stuff on A
        if(notMatchA.count > 0) {
            //can move something from B
            if(notMatchB.count > 0) {
                operation.type = challengeOperationType.move;
                operation.cost = weights.get(challengeOperationType.move);

                <double, double> bestMove = findBestMove(notMatchA, notMatchB);
                
                operation.from = bestMove.v0;
                operation.to = bestMove.v1;

                newState.exclude(operation.from.v);
                newState << operation.to.v;

                newState.sort();
                operation.snapshotAfter = newState;
            }
            //can't move so ditch
            else {
                operation.type = challengeOperationType.remove;
                operation.cost = weights.get(challengeOperationType.remove);
                operation.from = notMatchA[0];
                operation.to = null;

                newState.exclude(notMatchA[0]);

                newState.sort();
                operation.snapshotAfter = newState;
            }
        } else if(notMatchB.count > 0) {
            //nothing extra on A, but some stuff still needs to be done to match B, so add
            operation.type = challengeOperationType.add;
            operation.cost = weights.get(challengeOperationType.add);
            
            operation.from = null;
            operation.to = notMatchB[0];

            newState << notMatchB[0];

            newState.sort();
            operation.snapshotAfter = newState;
        } else {
            bug("sequences are identical, shouldn't enter here.");
        }
        return operation;
    }

    extend private <double, double> findBestMove(double[] a, double[] b) {
        <double, double> shortest = null;
        for(x in a) {
            for(y in b) {
                if(!shortest) {
                    shortest = <x,y>;
                }
                else {
                    double currentDistance = |shortest.v0 - shortest.v1|;
                    double newDistance = |x - y|;
                    if(newDistance < currentDistance) {
                        shortest = <x, y>;
                    }
                }
            }
        }
        return shortest;
    }
}