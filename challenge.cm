package custom.awesome;

public class Challenge {
    
    public constructor() {
        weights.put(challengeOperationType.move, 1);
        weights.put(challengeOperationType.add, 1.1);
        weights.put(challengeOperationType.remove, .9);
    }   

    public challengeOperationType->double weights();

    extend public ChallengeResult process(double[] a, double[] b) {
        return null;
    }
}

public enum challengeOperationType {
    move;
    add;
    remove;
}

public class ChallengeOperation {
    public constructor() { }
    public challengeOperationType type;
    public Double from;
    public Double to;
    public double[] snapshotAfter;
    public double cost;

    extend public double moveDistance() {
        if(!to or !from) return 0;
        return |to.v - from.v|;
    }
}

public class ChallengeResult {
    public constructor() { }
    
    public ChallengeOperation[] steps();
    public double totalCost;
    public double totalMoveDistance;
}

public void testChallenge(bool printDetails=false, bool printSteps=false) {
    str->Challenge candidates();

    candidates.put("Mateus", MateusChallenge());
    candidates.put("Danilo", DaniloChallenge());

    (double[])[] standards = [double[]:
        [double: 1,4,7],
        [double: 2,4,7],
        [double: 1,5,8,10],
        [double: 1,4,8],
        [double: 3,4,7,8],
        [double: 1,2],
        [double: 1,4,9],
        [double: 3,5,7],
        [double: 1,7,11]
    ];

    (double[])[] customs = [double[]:
        [double: 1,4,7],
        [double: 1,7],
        [double: 1,6,7],
        [double: 2,7],
        [double: 1,3,4,6,7],
        [double: 1,4,5,6]
    ];

    for(author, candidate in candidates) {
        double grandCost = 0;

        pln("################");
        pln(author);
        for(custom in customs) {
            ChallengeResult bestCase = null;
            double[] bestMatch;

            for(s in standards) {
                var result = candidate.process(s,custom);
                bool better = false;
                if(!bestCase) {
                    better = true;
                } else {
                    if(result.totalCost < bestCase.totalCost) {
                        better = true;
                    } else {
                        if(result.totalCost == bestCase.totalCost) {
                            if(result.totalMoveDistance < bestCase.totalMoveDistance) {
                                better = true;
                            }
                        }
                    }
                }
                
                if(better) {
                    bestCase = result;
                    bestMatch = s;
                }
            }
            if(printDetails) {
                pln("--------");
                pln("closest standard: " # bestMatch);
                pln("special: " # custom);
                pln("cost: " # bestCase.totalCost);
                pln("total move: " # bestCase.totalMoveDistance);

                if(printSteps) {
                    pln("steps:");
                    for(s in bestCase.steps) {
                        pln(#s.type; #s.from; #s.to; #s.cost; #s.moveDistance; #s.snapshotAfter);
                    }
                }
            }

            grandCost += bestCase.totalCost;
        }
        pln("---------");
        pln("grand cost: " #grandCost);
    }
}

{
    testChallenge(true, true);
}