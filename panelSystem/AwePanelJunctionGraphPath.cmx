package $dynamicPackageName;

public AwePath2D AwePanelJunctionGraphPath(AwePanelJunctionConnectionModel[] connections) {
    point2D[] vertices();

    for(c in connections) {
        orientation o(c.angle);
        orientation perpendicular(o.perpendicular);
        point2D faceCenter = point2D(c.angle, c.radius);
        point2D edgeOffset = point2D(perpendicular.yaw, c.faceWidth/2);
        vertices << faceCenter - edgeOffset << faceCenter + edgeOffset;
    }

    if(vertices.count == 0) return null; 

    AwePath2D path(vertices.first);
    for(v in vertices, index=i) {
        if(i != 0) path.lineTo(v);
    }

    path.lineTo(vertices.first);

    return path;
}

public AwePath2D AwePanelJunctionGraphPath(AwePanelJunctionModel model) {
    return AwePanelJunctionGraphPath(model.connections);
}
