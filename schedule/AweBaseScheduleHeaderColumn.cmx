package $dynamicPackageName;

public class AweBaseScheduleHeaderColumn {
    public AweBaseScheduleHeaderColumn parent;

    public int index;
    public int rowSpan;
    public int colSpan;
    public str label;
    public str showHideLabel;
    public double width;
    public bool visible;
    public bool allowHide;
    public int level;

    public AweBaseScheduleHeaderColumn[] subColumns();

    public constructor (str label, int colSpan=0, int rowSpan=0, double width=tabularCellDefaultWidth, bool visible=true, bool allowHide=true) {
        set*(this: label, colSpan, rowSpan, width, visible, allowHide);
    }

    extend public AweBaseScheduleHeaderColumn operator<<(AweBaseScheduleHeaderColumn subColumn) {
        subColumn.parent = this;

        this.subColumns << subColumn;

        return this;
    }

    extend public AweBaseScheduleHeaderColumn operator<<(str data) {
        this << new AweBaseScheduleHeaderColumn(data);

        return this;
    }

    extend public AweBaseScheduleHeaderColumn[] siblings() {
        AweBaseScheduleHeaderColumn[] siblings();

        if (this.parent) {
            for (column in this.parent.subColumns) {
                if (column != this) {
                    siblings << column;
                }
            }
        }

        return siblings;
    }

    extend public bool showInSchedule() {
        if (this.subColumns.?count == 0) return this.visible;

        for (column in this.subColumns) {
            if (column.allowHide and column.visible) return true;
        }

        return false;
    }
}